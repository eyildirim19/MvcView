@{
	Layout = null;
}

<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
	<link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>

	<div class="container">
		<a href="Diger/Sayfa2"> Diğer Sayfaya Git...</a>
		<br />
		<div class="row">
			@for (int i = 1; i <= 10; i++)
			{
				<div class="col-lg-2 col-md-2 col-sm-2 col-1">
					<ul class="list-group">
						@for (int j = 1; j <= 10; j++)
						{
							<li class="list-group-item"> @string.Format("{0} x {1} = {2}",i,j,i*j)</li>
						}
					</ul>
				</div>
			}
		</div>
	</div>
</body>
</html>
